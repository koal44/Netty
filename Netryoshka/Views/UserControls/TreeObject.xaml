<UserControl x:Class="Netryoshka.TreeObject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Netryoshka"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="TreeObjectUserControl"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
  <TreeView ItemsSource="{Binding TreeNodes, ElementName=TreeObjectUserControl}"
            ScrollViewer.CanContentScroll="False"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            Style="{x:Null}">
    <TreeView.Resources>
      <HierarchicalDataTemplate DataType="{x:Type local:TreeNode}"
                                ItemsSource="{Binding Path=Children}">
        <TreeViewItem Style="{x:Null}">
          <TreeViewItem.Header>
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="{Binding Path=Name}" />
              <TextBlock Text=" : " />
              <TextBlock Text="{Binding Path=Value}" />
            </StackPanel>
          </TreeViewItem.Header>
        </TreeViewItem>
      </HierarchicalDataTemplate>
    </TreeView.Resources>
  </TreeView>
</UserControl>
