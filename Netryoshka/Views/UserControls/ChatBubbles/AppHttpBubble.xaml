<UserControl x:Class="Netryoshka.AppHttpBubble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Netryoshka"
             xmlns:vm="clr-namespace:Netryoshka.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance vm:AppHttpBubbleViewModel,
                                              IsDesignTimeCreatable=True}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

  <local:FlowChatBubble BodyContent="{Binding BodyContent}"
                        BubbleScale="0.8"
                        DataContext="{Binding}"
                        EndPointRole="{Binding EndPointRole}"
                        FooterContent="{Binding FooterContent}"
                        HeaderContent="{Binding HeaderContent}" />
</UserControl>
